<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="BottomNavLabelStyle" parent="TextAppearance.AppCompat.Caption">
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textSize">10sp</item>
    </style>
    
    <!-- Custom Date Picker Dialog with Orange Theme -->
    <style name="CustomDatePickerDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/solora_orange</item>
        <item name="colorPrimary">@color/solora_orange</item>
        <item name="colorPrimaryDark">@color/solora_orange</item>
        <item name="android:colorAccent">@color/solora_orange</item>
        <item name="android:colorPrimary">@color/solora_orange</item>
        <item name="android:colorPrimaryDark">@color/solora_orange</item>
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="android:textColorSecondary">#666666</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:padding">16dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:buttonBarButtonStyle">@style/CustomDatePickerButton</item>
    </style>
    
    <!-- Custom Button Style for Date Picker -->
    <style name="CustomDatePickerButton" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/solora_orange</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:minHeight">40dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
    </style>
</resources>