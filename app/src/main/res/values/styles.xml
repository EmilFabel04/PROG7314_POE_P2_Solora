<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="BottomNavLabelStyle" parent="TextAppearance.AppCompat.Caption">
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textSize">10sp</item>
    </style>
    
    <!-- Custom Date Picker Dialog with Orange Theme and Proper Calendar -->
    <style name="CustomDatePickerDialog" parent="android:Theme.Material.Light.Dialog">
        <item name="colorAccent">@color/solora_orange</item>
        <item name="colorPrimary">@color/solora_orange</item>
        <item name="colorPrimaryDark">@color/solora_orange</item>
        <item name="android:colorAccent">@color/solora_orange</item>
        <item name="android:colorPrimary">@color/solora_orange</item>
        <item name="android:colorPrimaryDark">@color/solora_orange</item>
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="android:textColorSecondary">#666666</item>
        <item name="android:datePickerStyle">@style/CustomDatePickerStyle</item>
        <item name="android:buttonBarButtonStyle">@style/CustomDatePickerButton</item>
    </style>
    
    <!-- Custom Date Picker Style for Better Calendar View -->
    <style name="CustomDatePickerStyle" parent="android:Widget.Material.DatePicker">
        <item name="android:headerBackground">@color/solora_orange</item>
        <item name="android:calendarViewShown">true</item>
        <item name="android:spinnersShown">false</item>
    </style>
    
    <!-- Custom Button Style for Date Picker -->
    <style name="CustomDatePickerButton" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/solora_orange</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
    </style>
</resources>