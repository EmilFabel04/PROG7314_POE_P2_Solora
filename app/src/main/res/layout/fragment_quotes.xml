<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5F5F5">

    <!-- Orange Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/solora_orange"
        android:orientation="vertical"
        android:padding="20dp">
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Solar Quotes"
            android:textColor="@android:color/white"
            android:textSize="24sp"
            android:textStyle="bold" />
            
        <!-- Tab Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp">
            
            <TextView
                android:id="@+id/tab_calculate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="calculate quote"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:padding="12dp"
                android:gravity="center"
                android:background="@drawable/tab_selected"
                android:clickable="true"
                android:focusable="true" />
                
            <TextView
                android:id="@+id/tab_view"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="view quote"
                android:textColor="@android:color/white"
                android:alpha="0.7"
                android:padding="12dp"
                android:gravity="center"
                android:background="@drawable/tab_unselected"
                android:clickable="true"
                android:focusable="true" />
                
            <TextView
                android:id="@+id/tab_dashboard"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="dashboard"
                android:textColor="@android:color/white"
                android:alpha="0.7"
                android:padding="12dp"
                android:gravity="center"
                android:background="@drawable/tab_unselected"
                android:clickable="true"
                android:focusable="true" />
        </LinearLayout>
    </LinearLayout>

    <!-- Content Area -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        
        <!-- Calculate Quote Tab Content -->
        <ScrollView
            android:id="@+id/content_calculate"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="16dp"
            android:clipToPadding="false"
            android:visibility="visible">
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="32dp">
                
                <!-- Calculate Quote Card -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="2dp"
                    app:cardUseCompatPadding="true"
                    android:layout_marginBottom="16dp">
                    
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="20dp">
                        
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Calculate Quote"
                            android:textStyle="bold"
                            android:textSize="18sp"
                            android:layout_marginBottom="16dp" />
                        
                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Address"
                            android:layout_marginBottom="12dp"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
                            
                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/et_address"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />
                        </com.google.android.material.textfield.TextInputLayout>
                        
                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Monthly Usage"
                            android:layout_marginBottom="12dp"
                            app:suffixText="kWh"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
                            
                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/et_usage"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="numberDecimal" />
                        </com.google.android.material.textfield.TextInputLayout>
                        
                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Monthly Bill"
                            android:layout_marginBottom="12dp"
                            app:prefixText="R "
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
                            
                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/et_bill"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="numberDecimal" />
                        </com.google.android.material.textfield.TextInputLayout>
                        
                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Tariff"
                            android:layout_marginBottom="12dp"
                            app:suffixText="R/kWh"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
                            
                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/et_tariff"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="numberDecimal"
                                android:text="2.50" />
                        </com.google.android.material.textfield.TextInputLayout>
                        
                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Panel Size"
                            android:layout_marginBottom="16dp"
                            app:suffixText="W"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
                            
                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/et_panel"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="number"
                                android:text="420" />
                        </com.google.android.material.textfield.TextInputLayout>
                        
                        <Button
                            android:id="@+id/btn_calculate"
                            android:layout_width="match_parent"
                            android:layout_height="56dp"
                            android:text="calculate"
                            android:backgroundTint="@color/solora_orange"
                            android:textColor="@android:color/white"
                            android:textAllCaps="false"
                            android:textSize="16sp" />
                        
                        <!-- Save Quote Button (shown after calculation) -->
                        <Button
                            android:id="@+id/btn_save_quote_calculate"
                            android:layout_width="match_parent"
                            android:layout_height="56dp"
                            android:text="save quote"
                            android:backgroundTint="@color/solora_orange"
                            android:textColor="@android:color/white"
                            android:textAllCaps="false"
                            android:textSize="16sp"
                            android:visibility="gone"
                            android:layout_marginTop="12dp" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>
        </ScrollView>
        
        <!-- View Quotes Tab Content (List of All Quotes) -->
        <LinearLayout
            android:id="@+id/content_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="gone">
            
            <!-- Empty state -->
            <LinearLayout
                android:id="@+id/layout_empty_quotes"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="32dp"
                android:visibility="gone">
                
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No quotes yet"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />
                    
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Create your first quote in the Calculate tab"
                    android:textSize="14sp"
                    android:textColor="#666666"
                    android:gravity="center" />
            </LinearLayout>
            
            <!-- Quotes list -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_quotes_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="16dp"
                android:clipToPadding="false" />
        </LinearLayout>
        
        <!-- Dashboard Tab Content -->
        <ScrollView
            android:id="@+id/content_dashboard"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="16dp"
            android:clipToPadding="false"
            android:visibility="gone">
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="48dp">
                
                <!-- Dashboard Stats Cards -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp">
                    
                    <!-- Total Quotes Card -->
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="2dp"
                        app:cardUseCompatPadding="true"
                        android:layout_marginEnd="8dp">
                        
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="16dp"
                            android:gravity="center">
                            
                            <TextView
                                android:id="@+id/tv_total_quotes"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textSize="24sp"
                                android:textStyle="bold"
                                android:textColor="@color/solora_orange" />
                                
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Total Quotes"
                                android:textSize="12sp"
                                android:textColor="#666666" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>
                    
                    <!-- Total Revenue Card -->
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="2dp"
                        app:cardUseCompatPadding="true"
                        android:layout_marginStart="8dp">
                        
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="16dp"
                            android:gravity="center">
                            
                            <TextView
                                android:id="@+id/tv_total_revenue"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="R 0"
                                android:textSize="20sp"
                                android:textStyle="bold"
                                android:textColor="@color/solora_orange" />
                                
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Total Revenue"
                                android:textSize="12sp"
                                android:textColor="#666666" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>
                </LinearLayout>
                
                <!-- Performance Metrics -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp">
                    
                    <!-- Average System Size Card -->
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="2dp"
                        app:cardUseCompatPadding="true"
                        android:layout_marginEnd="8dp">
                        
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="16dp"
                            android:gravity="center">
                            
                            <TextView
                                android:id="@+id/tv_avg_system_size"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0 kW"
                                android:textSize="20sp"
                                android:textStyle="bold"
                                android:textColor="@color/solora_orange" />
                                
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Avg System Size"
                                android:textSize="12sp"
                                android:textColor="#666666" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>
                    
                    <!-- Average Savings Card -->
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="2dp"
                        app:cardUseCompatPadding="true"
                        android:layout_marginStart="8dp">
                        
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="16dp"
                            android:gravity="center">
                            
                            <TextView
                                android:id="@+id/tv_avg_savings"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="R 0"
                                android:textSize="20sp"
                                android:textStyle="bold"
                                android:textColor="@color/solora_orange" />
                                
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Avg Monthly Savings"
                                android:textSize="12sp"
                                android:textColor="#666666" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>
                </LinearLayout>
                
                <!-- System Size Distribution Chart -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="2dp"
                    app:cardUseCompatPadding="true"
                    android:layout_marginBottom="16dp">
                    
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="20dp">
                        
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="System Size Distribution"
                            android:textStyle="bold"
                            android:textSize="18sp"
                            android:layout_marginBottom="16dp" />
                        
                        <!-- Simple bar chart representation -->
                        <LinearLayout
                            android:id="@+id/chart_system_sizes"
                            android:layout_width="match_parent"
                            android:layout_height="200dp"
                            android:orientation="vertical"
                            android:background="#F8F9FA"
                            android:padding="16dp">
                            
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="No data available"
                                android:textColor="#666666"
                                android:gravity="center"
                                android:layout_gravity="center" />
                        </LinearLayout>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
                
                <!-- Monthly Performance Chart -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="2dp"
                    app:cardUseCompatPadding="true"
                    android:layout_marginBottom="16dp">
                    
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="20dp">
                        
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Monthly Quote Performance"
                            android:textStyle="bold"
                            android:textSize="18sp"
                            android:layout_marginBottom="16dp" />
                        
                        <!-- Simple line chart representation -->
                        <LinearLayout
                            android:id="@+id/chart_monthly_performance"
                            android:layout_width="match_parent"
                            android:layout_height="200dp"
                            android:orientation="vertical"
                            android:background="#F8F9FA"
                            android:padding="16dp">
                            
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="No data available"
                                android:textColor="#666666"
                                android:gravity="center"
                                android:layout_gravity="center" />
                        </LinearLayout>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
                
                <!-- Recent Quotes List -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="2dp"
                    app:cardUseCompatPadding="true"
                    android:layout_marginBottom="16dp">
                    
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="20dp">
                        
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Recent Quotes"
                            android:textStyle="bold"
                            android:textSize="18sp"
                            android:layout_marginBottom="16dp" />
                        
                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rv_recent_quotes"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:maxHeight="300dp" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>
        </ScrollView>
    </FrameLayout>

</LinearLayout>