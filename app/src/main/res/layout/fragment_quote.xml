<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- Orange Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="@drawable/top_nav_bar_background_orange"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:text="Solar Quotes"
            android:textColor="@android:color/white"
            android:fontFamily="@font/poppins_bold"
            android:textSize="30sp" />
    </LinearLayout>

    <!-- Tab Row -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginTop="10dp">

        <LinearLayout
            android:id="@+id/tab_calculate"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:background="@drawable/tab_selected_left"
            android:clickable="true"
            android:focusable="true">

            <TextView
                android:id="@+id/txt_tab_calculate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="8dp"
                android:text="calculate quote"
                android:textColor="@android:color/white"
                android:fontFamily="@font/poppins_medium"
                android:textSize="13sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/tab_view"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:background="@drawable/tab_unselected_middle"
            android:clickable="true"
            android:focusable="true" >

            <TextView
                android:id="@+id/txt_tab_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="23dp"
                android:text="view quote"
                android:textColor="@color/solora_orange"
                android:fontFamily="@font/poppins_medium"
                android:textSize="13sp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/tab_dashboard"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:background="@drawable/tab_unselected_right"
            android:clickable="true"
            android:focusable="true">

            <TextView
                android:id="@+id/txt_tab_dashboard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="25dp"
                android:text="dashboard"
                android:textColor="@color/solora_orange"
                android:fontFamily="@font/poppins_medium"
                android:textSize="13sp" />
        </LinearLayout>
    </LinearLayout>

    <!-- Content Area -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <!-- Calculate Quote Tab Content -->
        <ScrollView
            android:id="@+id/content_calculate"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:paddingTop="16dp"
            android:clipToPadding="false"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="32dp">

                <!-- Calculate Quote Card -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="2dp"
                    app:cardUseCompatPadding="true"
                    android:layout_marginBottom="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#FC8224"
                        android:orientation="vertical"
                        android:padding="20dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginBottom="16dp"
                            android:fontFamily="@font/poppins_semibold"
                            android:text="Calculate Quote"
                            android:textColor="@color/solora_black"
                            android:textSize="25sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Address"
                            android:fontFamily="@font/poppins"
                            android:textSize="16sp"
                            android:textColor="@color/solora_black"/>

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/input_field_background_grey"
                            app:boxBackgroundMode="none"
                            android:layout_marginBottom="12dp"
                            android:hint="Enter the address">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/et_address"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:fontFamily="@font/poppins"/>
                        </com.google.android.material.textfield.TextInputLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Monthly Usage"
                            android:fontFamily="@font/poppins"
                            android:textSize="16sp"
                            android:textColor="@color/solora_black"/>

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/input_field_background_grey"
                            app:boxBackgroundMode="none"
                            android:layout_marginBottom="12dp"
                            android:hint="Enter the monthly usage"
                            app:suffixText="kWh">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/et_usage"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="numberDecimal"
                                android:fontFamily="@font/poppins"/>
                        </com.google.android.material.textfield.TextInputLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Monthly Bill"
                            android:fontFamily="@font/poppins"
                            android:textSize="16sp"
                            android:textColor="@color/solora_black"/>

                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/input_field_background_grey"
                            app:boxBackgroundMode="none"
                            android:layout_marginBottom="12dp"
                            android:hint="Enter the monthly bill"
                            app:prefixText="R ">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/et_bill"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="numberDecimal"
                                android:fontFamily="@font/poppins"/>
                        </com.google.android.material.textfield.TextInputLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tariff"
                            android:fontFamily="@font/poppins"
                            android:textSize="16sp"
                            android:textColor="@color/solora_black"/>

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/input_field_background_grey"
                            app:boxBackgroundMode="none"
                            android:layout_marginBottom="12dp"
                            app:suffixText="R/kWh"
                            app:suffixTextAppearance="@style/CustomSuffixStyle">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/et_tariff"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="numberDecimal"
                                android:text="2.50" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Panel Size"
                            android:fontFamily="@font/poppins"
                            android:textSize="16sp"
                            android:textColor="@color/solora_black"/>

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:boxBackgroundMode="none"
                            android:layout_marginBottom="16dp"
                            app:suffixText="W">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/et_panel"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/input_field_background_grey"
                                android:inputType="number"
                                android:text="420" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <LinearLayout
                            android:id="@+id/btn_calculate"
                            android:layout_width="250dp"
                            android:layout_height="50dp"
                            android:orientation="horizontal"
                            android:clickable="true"
                            android:focusable="true"
                            android:layout_gravity="center"
                            android:layout_marginTop="30dp"
                            android:layout_marginBottom="24dp"
                            android:background="@drawable/authentication_button_background_orange">

                            <TextView
                                android:id="@+id/txt_calculate"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginLeft="90dp"
                                android:fontFamily="@font/poppins_medium"
                                android:text="calculate"
                                android:textColor="@color/solora_on_primary"
                                android:textSize="14sp"/>
                        </LinearLayout>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>
        </ScrollView>
        
        <!-- View Quotes Tab Content (List of All Quotes) -->
        <LinearLayout
            android:id="@+id/content_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="gone">
            
            <!-- Empty state -->
            <LinearLayout
                android:id="@+id/layout_empty_quotes"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="32dp"
                android:visibility="gone">
                
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No quotes yet"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />
                    
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Create your first quote in the Calculate tab"
                    android:textSize="14sp"
                    android:textColor="#666666"
                    android:gravity="center" />
            </LinearLayout>
            
            <!-- Quotes list -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_quotes_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="16dp"
                android:clipToPadding="false" />
        </LinearLayout>
        
        <!-- Dashboard Tab Content -->
        <ScrollView
            android:id="@+id/content_dashboard"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="16dp"
            android:clipToPadding="false"
            android:visibility="gone">
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="48dp">
                
                <!-- Quote Information Card -->
                    
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="20dp">
                        
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="Quote Information"
                            android:fontFamily="@font/poppins_semibold"
                            android:textColor="@color/solora_black"
                            android:textSize="20sp" />

                        <LinearLayout
                            android:layout_width="250dp"
                            android:layout_height="2dp"
                            android:layout_gravity="center"
                            android:background="@drawable/line_background_orange"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginTop="10dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:orientation="horizontal"
                            android:background="@drawable/quote_information_dropdown_background_white"
                            android:layout_marginTop="50dp">

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="300dp"
                            android:layout_height="match_parent"
                            app:boxBackgroundMode="none"
                            app:hintEnabled="false">

                            <AutoCompleteTextView
                                android:id="@+id/et_client_dropdown"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:padding="10dp"
                                android:hint="select client"
                                android:inputType="none"
                                android:background="@null" />
                        </com.google.android.material.textfield.TextInputLayout>

                            <ImageButton
                                android:id="@+id/btn_dropdown"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_marginLeft="20dp"
                                android:layout_gravity="center"
                                android:background="@drawable/downdrop_button_icon_orange"/>
                        </LinearLayout>

                            <!-- Placeholder when no clients -->
                            <TextView
                                android:id="@+id/tv_no_clients"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="No clients available"
                                android:textSize="14sp"
                                android:gravity="center"
                                android:textColor="@android:color/holo_red_dark"
                                android:padding="8dp"
                                android:visibility="gone"/>
                        </LinearLayout>
                        
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Client Details"
                            android:fontFamily="@font/poppins_medium"
                            android:textColor="@color/solora_black"
                            android:textSize="18sp"
                            android:layout_marginTop="16dp"
                            android:layout_marginBottom="12dp" />

                        <!-- Reference Number Section -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:paddingVertical="8dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Reference No."
                                android:fontFamily="@font/poppins"
                                android:textSize="16sp"
                                android:textColor="@color/solora_black"
                                android:layout_marginRight="15dp" />

                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="40dp"
                                app:boxBackgroundMode="none"
                                app:hintEnabled="false"
                                android:background="@drawable/quote_information_input_field_background_gray">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/et_reference"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:hint="enter the clients ref no."
                                    android:gravity="center_vertical"
                                    android:background="@null"
                                    android:padding="8dp"
                                    android:textSize="14sp"
                                    android:fontFamily="@font/poppins" />
                            </com.google.android.material.textfield.TextInputLayout>
                        </LinearLayout>

                        <!-- First Name Section -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:paddingVertical="8dp"
                            android:layout_marginTop="10dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="First Name"
                                android:fontFamily="@font/poppins"
                                android:textSize="16sp"
                                android:layout_marginRight="15dp"
                                android:textColor="@color/solora_black"/>

                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="40dp"
                                app:boxBackgroundMode="none"
                                app:hintEnabled="false"
                                android:background="@drawable/quote_information_input_field_background_gray">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/et_first_name"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:hint="enter the clients first name"
                                    android:gravity="center_vertical"
                                    android:background="@null"
                                    android:padding="8dp"
                                    android:textSize="14sp"
                                    android:fontFamily="@font/poppins" />
                            </com.google.android.material.textfield.TextInputLayout>
                        </LinearLayout>

                        <!-- Last Name Section -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:paddingVertical="8dp"
                            android:layout_marginTop="10dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Last Name"
                                android:fontFamily="@font/poppins"
                                android:textSize="16sp"
                                android:layout_marginRight="15dp"
                                android:textColor="@color/solora_black"/>

                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="40dp"
                                app:boxBackgroundMode="none"
                                app:hintEnabled="false"
                                android:background="@drawable/quote_information_input_field_background_gray">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/et_last_name"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:hint="enter the clients last name"
                                    android:gravity="center_vertical"
                                    android:background="@null"
                                    android:padding="8dp"
                                    android:textSize="14sp"
                                    android:fontFamily="@font/poppins" />
                            </com.google.android.material.textfield.TextInputLayout>
                        </LinearLayout>

                        <!-- Address Section -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:paddingVertical="8dp"
                            android:layout_marginTop="10dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Address"
                                android:fontFamily="@font/poppins"
                                android:textSize="16sp"
                                android:layout_marginRight="15dp"
                                android:textColor="@color/solora_black"/>

                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="40dp"
                                app:boxBackgroundMode="none"
                                app:hintEnabled="false"
                                android:background="@drawable/quote_information_input_field_background_gray">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/et_client_address"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:hint="enter the clients address"
                                    android:gravity="center_vertical"
                                    android:background="@null"
                                    android:padding="8dp"
                                    android:textSize="14sp"
                                    android:fontFamily="@font/poppins" />
                            </com.google.android.material.textfield.TextInputLayout>
                        </LinearLayout>

                        <!-- Email Section -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:paddingVertical="8dp"
                            android:layout_marginTop="10dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Email"
                                android:fontFamily="@font/poppins"
                                android:textSize="16sp"
                                android:layout_marginRight="15dp"
                                android:textColor="@color/solora_black"/>

                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="40dp"
                                app:boxBackgroundMode="none"
                                app:hintEnabled="false"
                                android:background="@drawable/quote_information_input_field_background_gray">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/et_email"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:hint="enter the clients email"
                                    android:inputType="textEmailAddress"
                                    android:gravity="center_vertical"
                                    android:background="@null"
                                    android:padding="8dp"
                                    android:textSize="14sp"
                                    android:fontFamily="@font/poppins" />
                            </com.google.android.material.textfield.TextInputLayout>
                        </LinearLayout>

                        <!-- Phone Section -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:paddingVertical="8dp"
                            android:layout_marginTop="10dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Phone"
                                android:fontFamily="@font/poppins"
                                android:textSize="16sp"
                                android:layout_marginRight="15dp"
                                android:textColor="@color/solora_black"/>

                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="40dp"
                                app:boxBackgroundMode="none"
                                app:hintEnabled="false"
                                android:background="@drawable/quote_information_input_field_background_gray">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/et_contact"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:hint="enter the clients phone number"
                                    android:inputType="phone"
                                    android:gravity="center_vertical"
                                    android:background="@null"
                                    android:padding="8dp"
                                    android:textSize="14sp"
                                    android:fontFamily="@font/poppins" />
                            </com.google.android.material.textfield.TextInputLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="20dp"
                            android:background="@drawable/line_background_orange"/>

                        <!-- Displayed Quote Details Section -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Quote Details"
                            android:fontFamily="@font/poppins_medium"
                            android:textColor="@color/solora_black"
                            android:textSize="18sp"
                            android:layout_marginTop="20dp"
                            android:layout_marginBottom="12dp" />

                            <!-- Quote Details Message if no quote details available -->
                            <TextView
                                android:id="@+id/tv_quote_summary"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Complete calculation first to see quote details"
                                android:fontFamily="@font/poppins"
                                android:textSize="13sp"
                                android:layout_marginBottom="16dp" />

                        <!-- Quote Details -->
                        <LinearLayout
                            android:id="@+id/quote_details_section"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:visibility="gone">

                        <!-- Number of Panels Section -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:paddingVertical="8dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Number of Panels"
                                android:fontFamily="@font/poppins"
                                android:textSize="16sp"
                                android:textColor="@color/solora_black"
                                android:layout_marginRight="15dp" />

                            <LinearLayout
