<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/solora_orange"
            android:orientation="vertical"
            android:padding="20dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Settings"
                android:textColor="@android:color/white"
                android:textSize="24sp"
                android:textStyle="bold" />
                
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Configure calculation constants and company information"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:alpha="0.9"
                android:layout_marginTop="4dp" />
        </LinearLayout>

        <!-- Tab Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">
            
            <TextView
                android:id="@+id/tab_calculation"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Calculation"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:padding="12dp"
                android:gravity="center"
                android:background="@drawable/tab_selected"
                android:clickable="true"
                android:focusable="true" />
                
            <TextView
                android:id="@+id/tab_company"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Company"
                android:textColor="@android:color/white"
                android:alpha="0.7"
                android:padding="12dp"
                android:gravity="center"
                android:background="@drawable/tab_unselected"
                android:clickable="true"
                android:focusable="true" />
        </LinearLayout>

        <!-- Calculation Settings Tab -->
        <LinearLayout
            android:id="@+id/content_calculation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible">

            <!-- Basic Constants Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:cardUseCompatPadding="true"
                android:layout_marginBottom="16dp">
                
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">
                    
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Basic Constants"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:layout_marginBottom="16dp" />
                    
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Default Tariff"
                        android:layout_marginBottom="12dp"
                        app:suffixText="R/kWh"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
                        
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_default_tariff"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="numberDecimal"
                            android:text="2.50" />
                    </com.google.android.material.textfield.TextInputLayout>
                    
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Default Panel Size"
                        android:layout_marginBottom="12dp"
                        app:suffixText="W"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
                        
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_default_panel_watt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="number"
                            android:text="420" />
                    </com.google.android.material.textfield.TextInputLayout>
                    
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Default Sun Hours"
                        android:layout_marginBottom="12dp"
                        app:suffixText="hours/day"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
                        
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_default_sun_hours"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="numberDecimal"
                            android:text="5.0" />
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Cost Constants Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:cardUseCompatPadding="true"
                android:layout_marginBottom="16dp">
                
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">
                    
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cost Constants"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:layout_marginBottom="16dp" />
                    
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Panel Cost"
                        android:layout_marginBottom="12dp"
                        app:prefixText="R "
                        app:suffixText="/W"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
                        
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_panel_cost_per_watt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="numberDecimal"
                            android:text="15.00" />
                    </com.google.android.material.textfield.TextInputLayout>
                    
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Inverter Cost"
                        android:layout_marginBottom="12dp"
                        app:prefixText="R "
                        app:suffixText="/W"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
                        
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_inverter_cost_per_watt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="numberDecimal"
                            android:text="12.00" />
                    </com.google.android.material.textfield.TextInputLayout>
                    
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Installation Cost"
                        android:layout_marginBottom="12dp"
                        app:prefixText="R "
                        app:suffixText="/kW"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
                        
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_installation_cost_per_kw"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="numberDecimal"
                            android:text="15000.00" />
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Performance Constants Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:cardUseCompatPadding="true"
                android:layout_marginBottom="16dp">
                
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">
                    
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Performance Constants"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:layout_marginBottom="16dp" />
                    
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Panel Efficiency"
                        android:layout_marginBottom="12dp"
                        app:suffixText="%"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
                        
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_panel_efficiency"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="numberDecimal"
                            android:text="20.0" />
                    </com.google.android.material.textfield.TextInputLayout>
                    
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Performance Ratio"
                        android:layout_marginBottom="12dp"
                        app:suffixText="%"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
                        
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_performance_ratio"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="numberDecimal"
                            android:text="80.0" />
                    </com.google.android.material.textfield.TextInputLayout>
                    
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Inverter Sizing Ratio"
                        android:layout_marginBottom="12dp"
                        app:suffixText="%"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
                        
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_inverter_sizing_ratio"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="numberDecimal"
                            android:text="80.0" />
                    </com.google.android.material.textfield.TextInputLayout>
                    
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="System Lifetime"
                        android:layout_marginBottom="12dp"
                        app:suffixText="years"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
                        
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_system_lifetime"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="number"
                            android:text="25" />
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>

        <!-- Company Settings Tab -->
        <LinearLayout
            android:id="@+id/content_company"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <!-- Company Information Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:cardUseCompatPadding="true"
                android:layout_marginBottom="16dp">
                
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">
                    
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Company Information"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:layout_marginBottom="16dp" />
                    
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Company Name"
                        android:layout_marginBottom="12dp"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
                        
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_company_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </com.google.android.material.textfield.TextInputLayout>
                    
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Company Address"
                        android:layout_marginBottom="12dp"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
                        
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_company_address"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </com.google.android.material.textfield.TextInputLayout>
                    
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Company Phone"
                        android:layout_marginBottom="12dp"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
                        
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_company_phone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="phone" />
                    </com.google.android.material.textfield.TextInputLayout>
                    
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Company Email"
                        android:layout_marginBottom="12dp"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
                        
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_company_email"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textEmailAddress" />
                    </com.google.android.material.textfield.TextInputLayout>
                    
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Company Website"
                        android:layout_marginBottom="12dp"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
                        
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_company_website"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textUri" />
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Consultant Information Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:cardUseCompatPadding="true"
                android:layout_marginBottom="16dp">
                
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">
                    
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Consultant Information"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:layout_marginBottom="16dp" />
                    
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Consultant Name"
                        android:layout_marginBottom="12dp"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
                        
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_consultant_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </com.google.android.material.textfield.TextInputLayout>
                    
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Consultant Phone"
                        android:layout_marginBottom="12dp"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
                        
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_consultant_phone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="phone" />
                    </com.google.android.material.textfield.TextInputLayout>
                    
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Consultant Email"
                        android:layout_marginBottom="12dp"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
                        
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_consultant_email"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textEmailAddress" />
                    </com.google.android.material.textfield.TextInputLayout>
                    
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="License Number"
                        android:layout_marginBottom="12dp"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
                        
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_consultant_license"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="24dp">

            <!-- Primary Save Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_save_settings"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginBottom="12dp"
                android:text="Save Settings"
                android:textSize="16sp"
                android:textStyle="bold"
                android:backgroundTint="@color/solora_orange"
                android:textColor="@android:color/white"
                android:drawableStart="@android:drawable/ic_menu_save"
                android:drawablePadding="8dp"
                app:cornerRadius="12dp"
                app:icon="@android:drawable/ic_menu_save"
                app:iconGravity="textStart"
                app:iconPadding="8dp" />

            <!-- Secondary Reset Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_reset_settings"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="Reset to Defaults"
                android:textSize="14sp"
                android:backgroundTint="@android:color/darker_gray"
                android:textColor="@android:color/white"
                android:drawableStart="@android:drawable/ic_menu_revert"
                android:drawablePadding="8dp"
                app:cornerRadius="12dp"
                app:icon="@android:drawable/ic_menu_revert"
                app:iconGravity="textStart"
                app:iconPadding="8dp"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>