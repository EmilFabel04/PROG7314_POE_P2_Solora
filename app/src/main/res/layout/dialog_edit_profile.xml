<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:padding="24dp">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="20dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Edit Profile"
            android:textColor="@color/solora_orange"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/btn_close_edit_profile"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@android:drawable/ic_menu_close_clear_cancel"
            android:tint="@color/solora_orange"
            android:contentDescription="Close" />

    </LinearLayout>

    <!-- Form Fields -->
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:boxStrokeColor="@color/solora_orange"
        app:hintTextColor="@color/solora_orange"
        app:startIconTint="@color/solora_orange">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_dialog_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="First Name"
            android:inputType="textPersonName" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:boxStrokeColor="@color/solora_orange"
        app:hintTextColor="@color/solora_orange"
        app:startIconTint="@color/solora_orange">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_dialog_surname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Last Name"
            android:inputType="textPersonName" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:boxStrokeColor="@color/solora_orange"
        app:hintTextColor="@color/solora_orange"
        app:startIconTint="@color/solora_orange">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_dialog_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:inputType="textEmailAddress" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:boxStrokeColor="@color/solora_orange"
        app:hintTextColor="@color/solora_orange"
        app:startIconTint="@color/solora_orange">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_dialog_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Phone Number"
            android:inputType="phone" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:boxStrokeColor="@color/solora_orange"
        app:hintTextColor="@color/solora_orange"
        app:startIconTint="@color/solora_orange">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_dialog_company"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Company"
            android:inputType="text" />

    </com.google.android.material.textfield.TextInputLayout>

    <!-- Company Information Section -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Company Information"
        android:textColor="@color/solora_orange"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginBottom="12dp" />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:boxStrokeColor="@color/solora_orange"
        app:hintTextColor="@color/solora_orange"
        app:startIconTint="@color/solora_orange">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_dialog_company_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Company Name"
            android:inputType="text" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:boxStrokeColor="@color/solora_orange"
        app:hintTextColor="@color/solora_orange"
        app:startIconTint="@color/solora_orange">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_dialog_company_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Company Address"
            android:inputType="textPostalAddress" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:boxStrokeColor="@color/solora_orange"
        app:hintTextColor="@color/solora_orange"
        app:startIconTint="@color/solora_orange">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_dialog_company_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Company Phone"
            android:inputType="phone" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:boxStrokeColor="@color/solora_orange"
        app:hintTextColor="@color/solora_orange"
        app:startIconTint="@color/solora_orange">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_dialog_company_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Company Email"
            android:inputType="textEmailAddress" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        app:boxStrokeColor="@color/solora_orange"
        app:hintTextColor="@color/solora_orange"
        app:startIconTint="@color/solora_orange">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_dialog_company_website"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Company Website"
            android:inputType="textUri" />

    </com.google.android.material.textfield.TextInputLayout>

    <!-- Action Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end">

        <Button
            android:id="@+id/btn_cancel_edit_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:textColor="@color/solora_orange"
            android:backgroundTint="@android:color/transparent"
            android:layout_marginEnd="12dp"
            android:minWidth="80dp"
            app:cornerRadius="8dp" />

        <Button
            android:id="@+id/btn_save_edit_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save"
            android:textColor="@android:color/white"
            android:backgroundTint="@color/solora_orange"
            android:minWidth="80dp"
            app:cornerRadius="8dp" />

    </LinearLayout>

</LinearLayout>
