<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/authentication_form_background_orange"
        android:padding="16dp">

        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Change Password" android:textStyle="bold" android:textSize="18sp" android:textColor="@android:color/white"/>
        <EditText android:id="@+id/et_current" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="Current Password" android:inputType="textPassword" android:layout_marginTop="12dp" android:background="@drawable/authentication_input_field_background_grey"/>
        <EditText android:id="@+id/et_new" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="New Password" android:inputType="textPassword" android:layout_marginTop="8dp" android:background="@drawable/authentication_input_field_background_grey"/>
        <Button android:id="@+id/btn_save" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="save" android:layout_marginTop="16dp" android:background="@drawable/authentication_button_background_orange" android:textColor="@android:color/white"/>

    </LinearLayout>

</FrameLayout>


