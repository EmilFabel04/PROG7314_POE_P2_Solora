<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <!-- Main Content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Orange Header with curved bottom -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/solora_orange"
            android:orientation="vertical"
            android:padding="20dp">
            
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Leads"
                android:textColor="@android:color/white"
                android:textSize="24sp"
                android:textStyle="bold"
                android:gravity="center" />
                
            <!-- Curved bottom edge -->
            <View
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:background="@drawable/header_curve" />
        </LinearLayout>

        <!-- Scrollable Content Area -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:fillViewport="true"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="16dp"
            android:paddingBottom="80dp"
            android:clipToPadding="false">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Table Header -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingStart="16dp"
                    android:paddingTop="16dp"
                    android:paddingEnd="16dp"
                    android:paddingBottom="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.5"
                        android:text="Ref no."
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:textColor="#333333" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:text="Name"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:textColor="#333333"
                        android:layout_marginStart="8dp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2.5"
                        android:text="Address"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:textColor="#666666"
                        android:layout_marginStart="8dp" />
                </LinearLayout>

                <!-- Divider -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#E0E0E0"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp" />

                <!-- Leads RecyclerView -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_leads"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false"
                    android:minHeight="200dp"
                    android:paddingBottom="16dp" />

                <!-- Empty State -->
                <LinearLayout
                    android:id="@+id/layout_empty_leads"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="40dp"
                    android:visibility="visible">

                    <ImageView
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:src="@android:drawable/ic_menu_myplaces"
                        app:tint="@color/solora_orange"
                        android:alpha="0.6" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="No leads yet"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:layout_marginTop="16dp"
                        android:textColor="#333333" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Start by adding your first lead"
                        android:textColor="#666666"
                        android:textSize="14sp"
                        android:gravity="center"
                        android:layout_marginTop="8dp" />
                        
                    <Button
                        android:id="@+id/btn_add_lead_empty"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Add First Lead"
                        android:backgroundTint="@color/solora_orange"
                        android:textColor="@android:color/white"
                        android:layout_marginTop="16dp"
                        android:textAllCaps="false"
                        android:textStyle="bold" />
                </LinearLayout>

                <!-- Extra spacing for FAB -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="80dp" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <!-- Floating Add Button - positioned by RelativeLayout -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_add_lead"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="24dp"
        android:src="@drawable/ic_add"
        android:backgroundTint="@color/solora_orange"
        app:tint="@android:color/white"
        android:elevation="8dp"
        android:visibility="gone"
        android:clickable="true"
        android:focusable="true"
        android:contentDescription="Add new lead" />

    <!-- Fallback Add Button (regular button styled as FAB) -->
    <Button
        android:id="@+id/btn_add_lead_fallback"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="24dp"
        android:text="+"
        android:textSize="24sp"
        android:textColor="@android:color/white"
        android:backgroundTint="@color/solora_orange"
        android:background="@drawable/fab_background"
        android:elevation="8dp"
        android:visibility="gone" />

    <!-- Add Lead Modal Overlay -->
    <FrameLayout
        android:id="@+id/overlay_add_lead"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80000000"
        android:visibility="gone"
        android:clickable="true"
        android:focusable="true">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="24dp">

                <!-- Modal Card -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="50dp"
                    android:layout_marginBottom="50dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="8dp"
                    app:cardBackgroundColor="@color/solora_orange_dark">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="24dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Add Lead"
                            android:textStyle="bold"
                            android:textSize="24sp"
                            android:textColor="@android:color/white"
                            android:gravity="center"
                            android:layout_marginBottom="20dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="First Name"
                            android:textColor="@android:color/white"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:layout_marginBottom="8dp" />

                        <EditText
                            android:id="@+id/et_first_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/input_field_background"
                            android:padding="16dp"
                            android:textSize="16sp"
                            android:textColor="#333333"
                            android:hint="e.g. Samantha"
                            android:textColorHint="#999999"
                            android:layout_marginBottom="16dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Last Name"
                            android:textColor="@android:color/white"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:layout_marginBottom="8dp" />

                        <EditText
                            android:id="@+id/et_last_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/input_field_background"
                            android:padding="16dp"
                            android:textSize="16sp"
                            android:textColor="#333333"
                            android:hint="e.g. Knowles"
                            android:textColorHint="#999999"
                            android:layout_marginBottom="16dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Address"
                            android:textColor="@android:color/white"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:layout_marginBottom="8dp" />

                        <EditText
                            android:id="@+id/et_address"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/input_field_background"
                            android:padding="16dp"
                            android:textSize="16sp"
                            android:textColor="#333333"
                            android:hint="e.g. 123 Main Road"
                            android:textColorHint="#999999"
                            android:layout_marginBottom="16dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Email"
                            android:textColor="@android:color/white"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:layout_marginBottom="8dp" />

                        <EditText
                            android:id="@+id/et_email"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/input_field_background"
                            android:padding="16dp"
                            android:textSize="16sp"
                            android:textColor="#333333"
                            android:hint="samantha.knowles@gmail.com"
                            android:textColorHint="#999999"
                            android:inputType="textEmailAddress"
                            android:layout_marginBottom="16dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Contact Number"
                            android:textColor="@android:color/white"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:layout_marginBottom="8dp" />

                        <EditText
                            android:id="@+id/et_contact"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/input_field_background"
                            android:padding="16dp"
                            android:textSize="16sp"
                            android:textColor="#333333"
                            android:hint="e.g. 067 896 5432"
                            android:textColorHint="#999999"
                            android:inputType="phone"
                            android:layout_marginBottom="20dp" />

                        <!-- Add Button -->
                        <Button
                            android:id="@+id/btn_add"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Add"
                            android:textColor="@android:color/white"
                            android:background="@drawable/authentication_button_background_orange"
                            android:textAllCaps="false"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:paddingStart="24dp"
                            android:paddingEnd="24dp"
                            android:paddingTop="12dp"
                            android:paddingBottom="12dp"
                            android:layout_gravity="center" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>
        </ScrollView>
    </FrameLayout>

</RelativeLayout>