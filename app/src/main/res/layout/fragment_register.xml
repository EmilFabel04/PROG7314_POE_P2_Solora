<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/get_started_background">

    <ImageButton
        android:id="@+id/btn_back_login"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="30dp"
        android:background="@drawable/arrow_back_icon_white"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="850dp"
        android:layout_marginTop="100dp"
        android:background="@drawable/authentication_form_background_orange"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:fontFamily="@font/poppins_bold"
            android:text="Create an account"
            android:textColor="@color/solora_on_primary"
            android:textSize="30sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins"
                android:text="First Name"
                android:textColor="@color/solora_on_primary"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="370dp"
                android:layout_height="50dp"
                android:background="@drawable/authentication_input_field_background_grey">

                <EditText
                    android:id="@+id/et_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="30dp"
                    android:background="@android:color/transparent"
                    android:fontFamily="@font/poppins"
                    android:hint="Please enter your first name"
                    android:textColorHint="@color/solora_dark_grey"
                    android:textSize="13sp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins"
                android:text="Last Name"
                android:textColor="@color/solora_on_primary"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="370dp"
                android:layout_height="50dp"
                android:background="@drawable/authentication_input_field_background_grey">

                <EditText
                    android:id="@+id/et_surname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="30dp"
                    android:background="@android:color/transparent"
                    android:fontFamily="@font/poppins"
                    android:hint="Please enter your last name"
                    android:textColorHint="@color/solora_dark_grey"
                    android:textSize="13sp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins"
                android:text="Email"
                android:textColor="@color/solora_on_primary"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="370dp"
                android:layout_height="50dp"
                android:background="@drawable/authentication_input_field_background_grey">

                <EditText
                    android:id="@+id/et_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="30dp"
                    android:background="@android:color/transparent"
                    android:fontFamily="@font/poppins"
                    android:hint="Please enter your email"
                    android:textColorHint="@color/solora_dark_grey"
                    android:textSize="13sp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins"
                android:text="Password"
                android:textColor="@color/solora_on_primary"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="370dp"
                android:layout_height="50dp"
                android:background="@drawable/authentication_input_field_background_grey">

                <EditText
                    android:id="@+id/et_password"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="30dp"
                    android:background="@android:color/transparent"
                    android:fontFamily="@font/poppins"
                    android:hint="Please enter your password"
                    android:textColorHint="@color/solora_dark_grey"
                    android:textSize="13sp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/btn_register"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:layout_marginTop="35dp"
            android:background="@drawable/authentication_button_background_orange"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/poppins_medium"
                android:text="create account"
                android:textColor="@color/solora_on_primary"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="105dp"
                android:layout_height="1dp"
                android:layout_gravity="center"
                android:background="@color/solora_night_gray" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:fontFamily="@font/poppins"
                android:text="or sign up with"
                android:textColor="@color/solora_night_gray"
                android:textSize="13sp" />

            <LinearLayout
                android:layout_width="105dp"
                android:layout_height="1dp"
                android:layout_gravity="center"
                android:background="@color/solora_night_gray" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:orientation="horizontal">

            <ImageButton
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/twitter_icon" />

            <ImageButton
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/google_icon" />

            <ImageButton
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/apple_icon" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/txt_btn_back_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:layout_marginTop="40dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins"
                android:text="Already have an account?"
                android:textColor="@color/solora_night_gray"
                android:textSize="13sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:fontFamily="@font/poppins"
                android:text="@string/login_text"
                android:textColor="@color/solora_night_gray"
                android:textSize="13sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>