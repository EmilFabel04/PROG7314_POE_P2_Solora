<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:maxHeight="500dp"
    android:fillViewport="true"
    android:background="@android:color/transparent">

<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="8dp"
    app:cardBackgroundColor="@color/solora_orange">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/solora_orange"
        android:padding="24dp">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="24dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Change Password"
            android:textColor="@android:color/white"
            android:textSize="24sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/btn_close_change_password"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@android:drawable/ic_menu_close_clear_cancel"
            android:tint="@android:color/white"
            android:contentDescription="Close" />

    </LinearLayout>

    <!-- Form Fields -->
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:boxBackgroundColor="@android:color/white"
        app:boxStrokeColor="@android:color/white"
        app:boxStrokeWidth="0dp"
        app:boxCornerRadiusTopStart="12dp"
        app:boxCornerRadiusTopEnd="12dp"
        app:boxCornerRadiusBottomStart="12dp"
        app:boxCornerRadiusBottomEnd="12dp"
        app:hintTextColor="@color/solora_orange"
        app:startIconTint="@color/solora_orange"
        app:endIconTint="@color/solora_orange"
        app:passwordToggleEnabled="true"
        app:passwordToggleTint="@color/solora_orange"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_current_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Current Password"
            android:textColor="@color/solora_on_surface"
            android:textColorHint="@color/solora_orange"
            android:inputType="textPassword" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:boxBackgroundColor="@android:color/white"
        app:boxStrokeColor="@android:color/white"
        app:boxStrokeWidth="0dp"
        app:boxCornerRadiusTopStart="12dp"
        app:boxCornerRadiusTopEnd="12dp"
        app:boxCornerRadiusBottomStart="12dp"
        app:boxCornerRadiusBottomEnd="12dp"
        app:hintTextColor="@color/solora_orange"
        app:startIconTint="@color/solora_orange"
        app:endIconTint="@color/solora_orange"
        app:passwordToggleEnabled="true"
        app:passwordToggleTint="@color/solora_orange"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_new_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="New Password"
            android:textColor="@color/solora_on_surface"
            android:textColorHint="@color/solora_orange"
            android:inputType="textPassword" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:boxBackgroundColor="@android:color/white"
        app:boxStrokeColor="@android:color/white"
        app:boxStrokeWidth="0dp"
        app:boxCornerRadiusTopStart="12dp"
        app:boxCornerRadiusTopEnd="12dp"
        app:boxCornerRadiusBottomStart="12dp"
        app:boxCornerRadiusBottomEnd="12dp"
        app:hintTextColor="@color/solora_orange"
        app:startIconTint="@color/solora_orange"
        app:endIconTint="@color/solora_orange"
        app:passwordToggleEnabled="true"
        app:passwordToggleTint="@color/solora_orange"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_confirm_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Confirm New Password"
            android:textColor="@color/solora_on_surface"
            android:textColorHint="@color/solora_orange"
            android:inputType="textPassword" />

    </com.google.android.material.textfield.TextInputLayout>

    <!-- Password Requirements -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Password must be at least 6 characters long"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        android:layout_marginBottom="24dp"
        android:alpha="0.9" />

    <!-- Action Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end"
        android:layout_marginTop="8dp">

        <Button
            android:id="@+id/btn_cancel_change_password"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:text="Cancel"
            android:textColor="@android:color/white"
            android:backgroundTint="@android:color/transparent"
            android:layout_marginEnd="12dp"
            android:minWidth="100dp"
            android:textSize="16sp"
            app:cornerRadius="24dp"
            android:background="@drawable/button_outline_white" />

        <Button
            android:id="@+id/btn_save_change_password"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:text="Change Password"
            android:textColor="@color/solora_orange"
            android:backgroundTint="@android:color/white"
            android:minWidth="140dp"
            android:textSize="16sp"
            android:textStyle="bold"
            app:cornerRadius="24dp" />

    </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>

</ScrollView>
