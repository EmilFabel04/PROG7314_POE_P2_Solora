<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_root"
    app:startDestination="@id/startFragment">

    <fragment
        android:id="@+id/startFragment"
        android:name="dev.solora.navigation.StartFragment"
        android:label="Start" >
        <action
            android:id="@+id/action_start_to_auth"
            app:destination="@id/auth_graph"/>
        <action
            android:id="@+id/action_start_to_main"
            app:destination="@id/main_graph"/>
    </fragment>

    <navigation
        android:id="@+id/auth_graph"
        app:startDestination="@id/onboardingFragment">
        <fragment
            android:id="@+id/onboardingFragment"
            android:name="dev.solora.navigation.OnboardingFragment"
            android:label="Onboarding">
            <action
                android:id="@+id/action_onboarding_to_login"
                app:destination="@id/loginFragment" />
            <action
                android:id="@+id/action_onboarding_to_register"
                app:destination="@id/registerFragment" />
        </fragment>
        <fragment
            android:id="@+id/loginFragment"
            android:name="dev.solora.navigation.LoginFragment"
            android:label="Login">
            <action
                android:id="@+id/action_login_to_main"
                app:destination="@id/main_graph"
                app:popUpTo="@id/auth_graph"
                app:popUpToInclusive="true" />
            <action
                android:id="@+id/action_login_to_register"
                app:destination="@id/registerFragment" />
        </fragment>
        <fragment
            android:id="@+id/registerFragment"
            android:name="dev.solora.navigation.RegisterFragment"
            android:label="Register">
            <action
                android:id="@+id/action_register_to_main"
                app:destination="@id/main_graph"
                app:popUpTo="@id/auth_graph"
                app:popUpToInclusive="true" />
            <action
                android:id="@+id/action_register_to_login"
                app:destination="@id/loginFragment" />
        </fragment>
    </navigation>

    <navigation
        android:id="@+id/main_graph"
        app:startDestination="@id/mainTabsFragment">
        <fragment
            android:id="@+id/mainTabsFragment"
            android:name="dev.solora.navigation.MainTabsFragment"
            android:label="Main">
            <action
                android:id="@+id/action_to_settings"
                app:destination="@id/settingsFragment" />
            <action
                android:id="@+id/action_to_notifications"
                app:destination="@id/notificationsFragment" />
            <action
                android:id="@+id/action_to_edit_profile"
                app:destination="@+id/editProfileFragment" />
            <action
                android:id="@+id/action_to_change_password"
                app:destination="@+id/changePasswordFragment" />
            <action
                android:id="@+id/action_to_quote_detail"
                app:destination="@id/quoteDetailFragment" />
        </fragment>

        <fragment
            android:id="@+id/settingsFragment"
            android:name="dev.solora.navigation.SettingsFragment"
            android:label="Settings" />

        <fragment
            android:id="@+id/notificationsFragment"
            android:name="dev.solora.navigation.NotificationsFragment"
            android:label="Notifications" />

        <fragment
            android:id="@+id/editProfileFragment"
            android:name="dev.solora.navigation.EditProfileFragment"
            android:label="Edit Profile" />

        <fragment
            android:id="@+id/changePasswordFragment"
            android:name="dev.solora.navigation.ChangePasswordFragment"
            android:label="Change Password" />

        <fragment
            android:id="@+id/quoteDetailFragment"
            android:name="dev.solora.navigation.QuoteDetailFragment"
            android:label="Quote Detail">
            <argument
                android:name="id"
                app:argType="long" />
        </fragment>
    </navigation>

</navigation>


