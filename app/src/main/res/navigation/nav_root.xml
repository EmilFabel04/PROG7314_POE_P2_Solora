<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_root"
    app:startDestination="@id/startFragment">

    <fragment
        android:id="@+id/startFragment"
        android:name="dev.solora.navigation.StartFragment"
        android:label="Start" >
        <action
            android:id="@+id/action_start_to_onboarding"
            app:destination="@id/onboardingFragment"
            app:popUpTo="@id/startFragment"
            app:popUpToInclusive="true"/>
        <action
            android:id="@+id/action_start_to_login"
            app:destination="@id/loginFragment"
            app:popUpTo="@id/startFragment"
            app:popUpToInclusive="true"/>
    </fragment>

    <navigation
        android:id="@+id/auth_graph"
        app:startDestination="@id/loginFragment">
        <fragment
            android:id="@+id/onboardingFragment"
            android:name="dev.solora.navigation.OnboardingFragment"
            android:label="Onboarding">
            <action
                android:id="@+id/action_onboarding_to_login"
                app:destination="@id/loginFragment" />
            <action
                android:id="@+id/action_onboarding_to_register"
                app:destination="@id/registerFragment" />
        </fragment>
        <fragment
            android:id="@+id/loginFragment"
            android:name="dev.solora.navigation.LoginFragment"
            android:label="Login">
            <action
                android:id="@+id/action_login_to_main"
                app:destination="@id/main_graph"
                app:popUpTo="@id/auth_graph"
                app:popUpToInclusive="true" />
            <action
                android:id="@+id/action_login_to_register"
                app:destination="@id/registerFragment" />
            <action
                android:id="@+id/action_login_to_onboarding"
                app:destination="@id/onboardingFragment" />
        </fragment>
        <fragment
            android:id="@+id/registerFragment"
            android:name="dev.solora.navigation.RegisterFragment"
            android:label="Register">
            <action
                android:id="@+id/action_register_to_main"
                app:destination="@id/main_graph"
                app:popUpTo="@id/auth_graph"
                app:popUpToInclusive="true" />
            <action
                android:id="@+id/action_register_to_login"
                app:destination="@id/loginFragment" />
        </fragment>
    </navigation>

    <navigation
        android:id="@+id/main_graph"
        app:startDestination="@id/mainTabsFragment">
        <fragment
            android:id="@+id/mainTabsFragment"
            android:name="dev.solora.navigation.MainTabsFragment"
            android:label="Main" />
    </navigation>

</navigation>