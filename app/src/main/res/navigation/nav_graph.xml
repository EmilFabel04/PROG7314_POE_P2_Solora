<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/onboardingFragment">

    <fragment
        android:id="@+id/onboardingFragment"
        android:name="dev.solora.ui.fragments.OnboardingFragment">
        <action
            android:id="@+id/action_onboarding_to_login"
            app:destination="@id/loginFragment" />
        <action
            android:id="@+id/action_onboarding_to_register"
            app:destination="@id/registerFragment" />
    </fragment>

    <fragment
        android:id="@+id/loginFragment"
        android:name="dev.solora.ui.fragments.LoginFragment">
        <action
            android:id="@+id/action_login_to_register"
            app:destination="@id/registerFragment" />
    </fragment>

    <fragment
        android:id="@+id/registerFragment"
        android:name="dev.solora.ui.fragments.RegisterFragment" />

    <fragment
        android:id="@+id/homeFragment"
        android:name="dev.solora.ui.fragments.HomeFragment" />

    <fragment
        android:id="@+id/quotesFragment"
        android:name="dev.solora.ui.fragments.QuotesFragment" />

    <fragment
        android:id="@+id/leadsFragment"
        android:name="dev.solora.ui.fragments.LeadsFragment" />

    <fragment
        android:id="@+id/profileFragment"
        android:name="dev.solora.ui.fragments.ProfileFragment" />

    <fragment
        android:id="@+id/settingsFragment"
        android:name="dev.solora.ui.fragments.SettingsFragment" />

    <fragment
        android:id="@+id/notificationsFragment"
        android:name="dev.solora.ui.fragments.NotificationsFragment" />

    <fragment
        android:id="@+id/editProfileFragment"
        android:name="dev.solora.ui.fragments.EditProfileFragment" />

    <fragment
        android:id="@+id/changePasswordFragment"
        android:name="dev.solora.ui.fragments.ChangePasswordFragment" />

    <fragment
        android:id="@+id/quoteDetailFragment"
        android:name="dev.solora.ui.fragments.QuoteDetailFragment">
        <argument
            android:name="id"
            app:argType="long"
            android:defaultValue="0" />
    </fragment>
</navigation>
